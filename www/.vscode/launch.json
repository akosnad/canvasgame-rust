    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox",
            "reAttach": true,
            "webRoot": "${workspaceFolder}/www",
            "url": "http://localhost:8080/",
            "preLaunchTask": "webpack dev server",
            "pathMappings": [
                {
                    "url": "webpack:///node_modules/strip-ansi",
                    "path": "${workspaceFolder}"
                }
            ]
        }
    ]
}